@{
    ViewBag.Title = "Upvoted";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FashionWebsite.ViewModels
@model IEnumerable<MyDesignViewModel>
<style>
    body {
        margin: 0;
    }

    .container {
        padding: 0;
    }

    .hero__text {
        margin-left: 200px
    }

</style>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active">Upvoted Designs</li>
                </ul>
            </div>
        </div>
        @if (!Model.Any())
        {
            <p class="lead">
                No Upvoted Designs yet. Help Fashionistas grow by upvoting their crafts.
            </p>
        }
        else
        {
            <p class="lead">
                See Your Upvoted Designs.
            </p>
        }
        <div class="row gx-4 mt-3">
            @foreach (var design in Model)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix hot-sales">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Url.Content(design.Image)">
                        </div>
                        <div class="product__item__text">
                            <h6>@design.Name</h6>
                            <h6>Upvotes: @design.UpVotes</h6>
                            <a asp-action="ViewDesign" asp-controller="Design" asp-route-id="@design.Id" class="add-cart">View</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



