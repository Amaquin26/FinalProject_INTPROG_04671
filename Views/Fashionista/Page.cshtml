@using FashionWebsite.ViewModels
@model FashionistaPageViewModel

@{
    ViewBag.Title = "FashionistaPage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        margin: 0;
    }

    .container {
        padding: 0;
    }

    .hero__text {
        margin-left: 200px
    }

</style>

<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active">Fashionista Page</li>
                </ul>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@Model.FashionistaName</h5>
                <p class="card-text no-margin"><small class="text-body-secondary">Contact Info: @Model.FashionistaContact</small></p>
                <p class="card-text no-margin"><small class="text-body-secondary">Total Upvotes: @Model.TotalUpvotes</small></p>
                <p class="card-text no-margin"><small class="text-body-secondary">Total Designs Crafted: @Model.TotalDesigns</small></p>
            </div>
        </div>
        <div class="row gx-4 mt-3">
            @foreach (var design in Model.DesignViews)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix hot-sales">
                    <div class="product__item">
                        <div class="product__item__pic set-bg" data-setbg="@Url.Content(design.Image)">
                        </div>
                        <div class="product__item__text">
                            <h6>@design.Name</h6>
                            <h6>Upvotes: @design.UpVotes</h6>
                            <a asp-action="ViewDesign" asp-controller="Design" asp-route-id="@design.Id" class="add-cart">View</a>
                        </div>
                    </div>
                </div>
            }

            @if (!Model.DesignViews.Any())
            {
                <h4>No Designs Yet.</h4>
            }
        </div>
    </div>
</section>



