@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using FashionWebsite.ViewModels
@model RegisterViewModel


<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h2>Register</h2>
                </div>
            </div>
        </div>
    </div>
</section>


<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text">
                    <div class="section-title">
                        <h2>
                            Be a Part of
                            <div class="header__logo">
                                <a href="@Url.Action("Index", "Home")"><li style="list-style: none; display: inline-block; height: 30px; line-height: 30px; font-size: 55px; color: brown;">FashionistaWeb</li></a>
                            </div>
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__form">
                    @if (TempData["Errors"] != null)
                    {
                        <div class="p-4 mb-4 text-sm text-danger rounded-lg border border-danger" role="alert">
                            @if (TempData["Errors"] is string)
                            {
                                <span class="font-medium">@TempData["Errors"]</span>
                            }
                            else if (TempData["Errors"] is string[])
                            {
                                foreach (var errorMessage in (string[])TempData["Errors"])
                                {
                                    <span class="font-medium">@errorMessage</span>
                                }
                            }
                            else
                            {
                                <span class="font-medium">Sorry! Try Again</span>
                            }
                        </div>
                    }
                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="Email" type="email" placeholder="Email" />
                            </div>                  
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="Username" type="text" placeholder="Username" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="PhoneNumber" type="text" placeholder="PhoneNumber" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="Password" type="password" placeholder="Password" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm Password" />
                            </div>                          
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="FirstName" type="text" placeholder="First Name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="w-100">
                                <input asp-for="LastName" type="text" placeholder="Last Name" />
                            </div>
                        </div>
                        <div class="d-flex p-2 align-items-center">
                            <label asp-for="AsFashionista" style="margin-right:5px">Register as Fashionista?</label>
                            <input asp-for="AsFashionista" type="checkbox" checked style="width:20px !important;margin:0 !important"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
